{% extends "layout.twig" %}

{% block content %}
    <p>
        <a class="btn btn-secondary" href="{{ 'admin/posts' | url }}">Back</a>
    <p>
    {% if result %}
        <div class="alert alert-success">Post Saved</div>
    {% endif %}

    <form action="insert-post.twig" method="post">
        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input class="form-control" name="title" id="inputTitle" >
        </div>
        <textarea class="form-control" name="content" id="inputContent"></textarea>
        <br>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>
{% endblock %}
